//PROGRAM TO FIND GREATEST NUMBER AMONG THREE USING FUNCTION//

#include<iostream>
using namespace std;
class Store
{
	protected:
		int a,b,c;
		public:
			void getval()
			{
				cout<<"enter value of a , b and c: "<<endl;
				cin>>a>>b>>c;
			}
			void greatest()
			{
				if(a>b&&a>c)
				{
					cout<<"greatest number is : "<<a<<endl;
				}
				if(b>a&&b>c)
				{
					cout<<"greatest number is : "<<b<<endl;
				}
				else if(a>c&&a>b)
				cout<<"greatest number is : "<<c<<endl;
			}
};
int main()
{
	Store s;
	s.getval();
	s.greatest();
	return 0;
}

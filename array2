//program to display the elements of array//


#include<iostream>
using namespace std;
class Array
{
	int  x,i,arr[300];
	public:
		void get_data()
		{
			cout<<"enter the size of array: "<<endl;
			cin>>x;
			cout<<"enter the elements of array : "<<endl;
			for(i=0;i<x;i++)
			{
				cin>>arr[i];
			}
	    }
				void display()
				{
					cout<<"array is : ";
				for(i=0;i<x;i++)
				cout<<" "<<arr[i];	
				}
};
int main()
{
	Array a;
	a.get_data();
	a.display();
	return 0;
	
}
